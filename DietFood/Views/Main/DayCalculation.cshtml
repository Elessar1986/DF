<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.Day.Week.Name / @Model.Day.DayName</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                @for (int i = 0; i < 5; i++)
                {
                    if (Model.DishCalculations.Count(x => x.MealType == i) > 0)
                    {

                        <thead>
                            <tr>
                                <th>@((MealName)i)</th>
                                <th>Вес</th>
                                <th>Калории</th>
                                <th>Белки</th>
                                <th>Жиры</th>
                                <th>Углеводы</th>
                                <th>Редактировать</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model.DishCalculations.Where(x => x.MealType == i))
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    @if (item.ConstWeight > 0)
                                    {
                                        <td class="text-danger">@item.ConstWeight</td>
                                    }
                                    else
                                    {
                                        <td>@item.Weight</td>
                                    }
                                    <td>@item.Calories</td>
                                    <td>@item.Proteins </td>
                                    <td>@item.Fats</td>
                                    <td>@item.Carbohydrates</td>
                                    @if (item.ConstWeight > 0)
                                    {
                                        <td class="text-danger">@item.ConstWeight</td>
                                    }
                                    else
                                    {
                                        <td>
                                            <input dish-calc-id="@item.DishId" type="text" class="form-control ConstWeightEdit integer" />
                                        </td>
                                    }
                                </tr>
                            }

                        </tbody>
                    }
                }
                <tbody>
                    <tr>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td>
                            <button class="btn btn-success btn-user btn-block" id="CustomDayCalculationSubmit" type="button">
                                Пересчитать
                            </button>
                        </td>
                    </tr>

                </tbody>
                <tbody>
                    <tr>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td>
                            <a class="btn btn-success btn-user btn-block" href="@Url.Action("CalculateDay", new { weight= Model.ClientWeight, dayId =Model.DayId })">
                                Сбросить
                            </a>
                        </td>
                    </tr>

                </tbody>

            </table>
          
        </div>
    </div>
</div>

@section  scripts{ 


<script>
    $("#CustomDayCalculationSubmit").on("click", function () {

        var dict = [];

        $(".ConstWeightEdit").each(function () {
            var currentElement = $(this);
            var value = currentElement.val(); 
            var key = currentElement.attr("dish-calc-id");
            if (value != '') {
                
                dict.push({
                    Key: key,
                    Value: value
                });
            }
         
            
        });

            $.ajax({
                type: "POST",
                async: false,
                cache: false,
                url: "CustomDayCalculation",
                data: {
                    weight: @Model.ClientWeight,
                    dayId: @Model.DayId,
                    constWeight: dict
                },
                success: function (data) {
                    if (data.status = 'ok') {
                        window.location = "DayCalculation?weight=" + @Model.ClientWeight + "&dayId=" + @Model.DayId;
                    }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert("Error");
                console.log("Error while loading popup:");
                console.log(jqXHR);
                console.log(textStatus);
                console.log(errorThrown);
            }
        });

    })

    
</script>
}