@model DietFood.Models.Product

<div class="row">

    <!-- Content Column -->
    <div class="col-lg-6 mb-4">

        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">Добавление блюда</h6>
            </div>
            <div class="card-body">
                <form class="user" asp-action="AddProduct" method="post">

                    <div class="form-group">
                        <input asp-for="Name" type="text" class="form-control form-control-user" placeholder="Название блюда">
                        <span asp-validation-for="Name"></span>
                    </div>

                    <button class="btn btn-success btn-user btn-block" type="submit">
                        Добавить блюдо
                    </button>

                </form>
            </div>
        </div>

    </div>

    <div class="col-lg-6 mb-4">

        <!-- Illustrations -->
        <div class="card shadow mb-4">
            
        </div>

       

    </div>
</div>